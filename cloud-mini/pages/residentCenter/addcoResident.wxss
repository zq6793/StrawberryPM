.weui-cells {
	margin-top: 20rpx;
}
.user-two{
  margin: 10px 0;
}
.pic-cont{
  padding: 10rpx;
  margin: 0 auto;
}
.pic-cont .pic{
  width: 140rpx;
  height: 140rpx;
  border: 1px #f2f2f2 solid;
  text-align: center;
  margin:7px;
}
.weui-btn{
  width: 300rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 30rpx;
}
.bottom-flex{
  margin: 50rpx auto;
  text-align: center;
}
button[type="primary"]{
  background-color: #614789;
  border: none;
  color: #fff;
}

.weui-cells::after{
  border-bottom: none;
}
.weui-cells::before{
  border-top: none;
}
.code{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.code-cont{
  width: 50%;
  text-align: center;
  position: relative;
  top: 24%;
  left: 25%;
}
.code-img{
  width:100%;
  height:188px;
  border-bottom:1px #ededed solid;
}
.scan-code-end{
  color: #614689;
  font-size: 14px;
  height:54rpx;
  display:block;
}