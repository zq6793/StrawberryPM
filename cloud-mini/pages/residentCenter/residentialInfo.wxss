.weui-form-preview::after,
.weui-form-preview::before,
.weui-cells::before,
.weui-cells::after{
  border: none;
}

.code{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.code-cont{
  width: 50%;
  text-align: center;
  position: relative;
  top: 24%;
  left: 25%;
}
.code-img{
  width:100%;
  height:188px;
  border-bottom:1px #ededed solid;
}
.scan-code-end{
  color: #614689;
  font-size: 14px;
  height:54rpx;
  display:block;
}
.resident_color{
  color: #000;
}
.resident_line{
  position: relative;
}
.resident_line::before{
  content:" ";
  position:absolute;
  top:0;
  right:0;
  height:1px;
  border-top:1rpx solid #d9d9d9;
  color:#d9d9d9;
  left:15px;
}
.resident_title{
  font-size: 30rpx;
}
.resident_photo{
  padding: 43rpx 30rpx;
}
.resident_distance{
  margin-bottom: 43rpx;
}
.img_distance{
  margin: 0 auto;
}
.resident_documents{
  box-sizing: border-box;
  height: 150rpx;
  width: 100%;
  text-align: center;
  padding: 0 40rpx;
} 
.resident_document{
  width:150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border: 1rpx solid #d9d9d9;
} 
.resident_document image{
  width:150rpx;
  height: 150rpx;
}
.add{
    font-size: 80rpx;
}