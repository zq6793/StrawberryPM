.weui-form-preview{
  margin-top: 20rpx;

} 
 .weui-form-preview__item .contract{
  width: 130rpx;
  height: 50rpx;
  line-height:50rpx;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  margin-top: 0;
  border:1px solid #E51C23;
  background: transparent;
  color: #E51C23;
  border-radius: 10rpx;
}
.book_pad{
  margin-top: 20rpx;
  background: #fff;
  height: 88rpx;
}
.resident_center{
  height: 40rpx;
  line-height: 40rpx;
}
.resident_center:after{
   border-bottom: none;
}
.bottom-flex{
  margin: 50rpx auto 20rpx;
  text-align: center;
}
.weui-btn{
  width: 650rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: 1px solid #00A69B;
  color: #00A69B;
  font-size: 30rpx;
}
