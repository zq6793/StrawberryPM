<view class="page">
   <view class="page__bd">
            <view class="weui-form-preview preview_panel">
            <view class="weui-form-preview__hd resident_center">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label resident_color resident_title">预订客人信息</view>
                    <view class="weui-form-preview__value_in-hd">
                       <button class="weui-btn contract" type="primary" data-phone_number="{{ phone }}" plain="true" bindtap="calling">拨打电话</button>
                    </view>
                </view>

            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item min_size">
                    <view class="weui-form-preview__label min_width font-m">姓名</view>
                    <view class="weui-form-preview__value font-m">{{bookInfo.name}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label min_width font-m">联系方式</view>
                    <view class="weui-form-preview__value font-m">{{ bookInfo.phone }}</view>
                </view>
            </view>
             <view class="weui-form-preview__bd resident_line">
               
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label resident_color resident_title">预订房间信息</view>
                </view>
           
                <view class="weui-form-preview__bd parts">
                    <view class="weui-form-preview__item min_size">
                        <view class="weui-form-preview__label min_width font-m">预订房号</view>
                        <view class="weui-form-preview__value font-m">{{ bookInfo.room.number }}</view>
                    </view>
                    <view class="weui-form-preview__item">
                        <view class="weui-form-preview__label min_width font-m">预订时间</view>
                        <view class="weui-form-preview__value font-m">{{ bookInfo.booking.time }}</view>
                    </view>
                    <view class="weui-form-preview__item">
                        <view class="weui-form-preview__label min_width font-m">预订定金</view>
                        <view class="weui-form-preview__value font-m">{{ bookInfo.booking.money }}元</view>
                    </view>
                    <view class="weui-form-preview__item">
                        <view class="weui-form-preview__label min_width font-m">备注信息</view>
                        <view class="weui-form-preview__value font-m">{{ bookInfo.remark }}</view>
                    </view>
                </view>
            </view>   
        </view> 
   </view>
</view>

