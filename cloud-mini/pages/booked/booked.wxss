.weui-btn{
  width: 670rpx;
  height: 94rpx;
  margin: 50rpx auto;
}
button[type="primary"]{
  background-color: #614789;
  border: none;
  color: #fff;
}
.weui-cell__ft{font-size: 28rpx;}
.code{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.code-cont{
  width: 50%;
  text-align: center;
  position: relative;
  top: 24%;
  left: 25%;
}
.code-img{
  width:100%;
  height:188px;
  border-bottom:1px #ededed solid;
}
.scan-code-end{
  color: #614689;
  font-size: 14px;
  height:54rpx;
  display:block;
}

.weui-cells::after{
  border: none;  
}
.weui-cells::before{
  border: none;
}