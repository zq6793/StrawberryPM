.pay-cont{
	text-align: center;
	padding:10rpx 30rpx;
	margin: 0;
  position: relative;
}
.pay-cont::after{
  content:" ";
  position:absolute;
  bottom:0;
  right:0;
  height:1px;
  border-bottom:1rpx solid #f2f2f2;
  color:#f2f2f2;
  left:15px;
}
.forms navigator:last-child::after{
  border-bottom: none;
}
.user-text{
	text-align: left;
}
.user-imgs{
	width: 90rpx; 
	height: 90rpx; 
	margin-right: 30rpx;
}
.user-imgs image{
	width: 100%;
	height: 100%;
	border-radius: 50%; 
	-webkit-border-radius:50%;
}
.rollall{
	width: 200rpx;
	height: 84rpx;
	line-height: 48rpx;
	margin:0px auto; 
	font-size: 20rpx; 
	color: rgba(0, 0, 0, 0.32); 
	text-align: center;
}
.order_font{
  font-size: 30rpx;
}
.order_money{
	height: 31px;
  font-size: 28rpx;
  color:rgb(136,136,136);
}
.userImg{
  margin: auto 0;
}