.pay-cont{
	text-align: center;
	padding:10rpx 30rpx;
	margin: 0;
  position: relative;
}
.pay-cont::after{
  content:" ";
  position:absolute;
  bottom:0;
  right:0;
  height:1px;
  border-bottom:1rpx solid #f2f2f2;
  color:#f2f2f2;
  left:15px;
}
.forms navigator:last-child::after{
    border-bottom: none;
}
.user-text{
	text-align: left;
}
.user-imgs{
	width: 99rpx; 
	height: 99rpx; 
	margin-right: 30rpx;
}
.user-imgs image{
	width: 100%;
	height: 100%;
	border-radius: 50%; 
	-webkit-border-radius:50%;
}
.rollall{
	width: 200rpx;
	height: 84rpx;
	line-height: 48rpx;
	margin:0px auto; 
	font-size: 20rpx; 
	color: rgba(0, 0, 0, 0.32); 
	text-align: center;
}
.roll{ 
	width: 48rpx;
	height: 48rpx; 
	position: relative;
	float: left; 
	animation: clockwise 1.5s linear infinite; 
	display: block;	
}
.roll image{
	width: 48rpx; 
	height: 48rpx;
}
@-webkit-keyframes clockwise {
  0% { -webkit-transform: rotate(0deg) } 
  100% { -webkit-transform: rotate(360deg) }
}
@keyframes clockwise {
  0% { transform: rotate(0deg) }
  100% { transform: rotate(360deg) }
}
.footer{ 
	height: 40rpx; 
	line-height: 40rpx; 
	position: relative; 
	font-size: 20rpx; 
	text-align: center;
	color: rgba(0, 0, 0, 0.32); 
	padding-bottom: 24rpx;
	padding-top: 20rpx;
}
.footer span{ 
	position: relative;
	z-index:2;
	padding:0 10px;
}
.order_font{
  font-size: 30rpx;
}
.order_money{
  font-size: 28rpx;
}
.edit{
	color: #000;
}
.delete{
  margin: auto 20rpx;
}
.delete_{
	width: 40rpx;
