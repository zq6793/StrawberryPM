.container{
	height: 396rpx;
  position: relative;
  text-align: center;
}
.container image{
	width: 100%;
	height: 396rpx;
}
.edit{
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	position: absolute;
	top: 30rpx;
	right: 30rpx;
	display: block;
	border-radius: 8rpx;
	border: 1px #fff solid;
	padding:0 20rpx;
}
.name{
	font-size: 16px;
	text-align: center;
}
.user-img {
	width: 100%;
  position: absolute;
  top: 60rpx;
  text-align: center;
}
.user-img .user-imgs{
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	-webkit-border-radius:50%;
	border: 4rpx rgb(176,167,241) solid;
}
.user_position{
  width: 500rpx;
  margin: -166rpx auto 0;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.name view:last-child{
	padding-bottom:30rpx;
}
.user-list{
	margin: 20rpx 0 0;
}
.list{
	height: 80rpx;
	padding:10px 15px;
}
.title{
	display: inline-block; 
	vertical-align: middle
}
.footer{
	width: 100%;
	position: absolute;
	bottom: 0;
	text-align: center;
	font-size: 20rpx;
}